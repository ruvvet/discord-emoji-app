  /* effect */
  .navbar.shift-fx .nav-li a {
    border: 1px solid rgba(0, 0, 0, 0);
    overflow: hidden;
    position: relative;
  }
  .navbar.shift-fx .nav-li a:after,
  .navbar.shift-fx .nav-li a:before {
    background: rgba(114, 137, 218, 0.5);
    content: ' ';
    display: block;
    height: 100%;
    position: absolute;
    transform: skewX(-45deg);
    -webkit-transform: skewX(-45deg);
    width: 0;
  }
  .navbar.shift-fx .nav-li a:after {
    bottom: 0;
    right: -20%;
  }
  .navbar.shift-fx .nav-li a:before {
    top: 0;
    left: -20%;
  }
  .navbar.shift-fx .nav-li a:hover {
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.2);
  }
  .navbar.shift-fx .nav-li a:hover:after,
  .navbar.shift-fx .nav-li a:hover:before {
    width: 150%;
  }
</style>

