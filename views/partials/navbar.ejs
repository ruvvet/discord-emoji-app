  .navbar,
  .navbar .nav-li a,
  .navbar .nav-li a:after,
  .navbar .nav-li a:before {
    -webkit-transition: all 300ms ease-in-out;
    transition: all 300ms ease-in-out;
  }

  .navbar:hover {
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
  }

  .navbar .nav-li a {
    display: flex;
    justify-content: center;
    align-items: center;
