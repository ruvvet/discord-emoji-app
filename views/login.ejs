<style>
/* login */
    .login {
      margin: 0 auto;
      width: 100%;
      height: 100%;
      border-top-right-radius: 10px;
      /* background: radial-gradient(circle, rgba(114,137,218,1) 0%, rgba(114,137,218,1) 25%, rgba(222,222,222,1) 50%, rgba(222,222,222,1) 75%); */
    }

    .login-icon {
      height: 50px;
